{
    "cloudant-generic-trap-handler": {
        "trap": "CLOUDANT-PLATFORM-MIB::cloudantGenericTrap",
        "name": "{hostname} Cloudant Generic Event",
        "arguments": {
            "CLOUDANT-PLATFORM-MIB::cloudantTrapMessage": "message"
        },
        "output": "{message}",
        "handlers": ["debug"],
        "severity": 2
    },
    "cloudant-dbcore-reboot-event-event": {
        "trap": "CLOUDANT-DBCORE-MIB::cloudantDbcoreRebootEvent",
        "name": "{hostname} DBCore Reboot Event",
        "output": "DBCore on {hostname} was rebooted",
        "handlers": ["debug"],
        "severity": 1
    }, 
    "cloudant-loadbalancer-server-up-event": {
        "trap": "CLOUDANT-LOADBALANCER-MIB::cloudantLoadBalancerServerDown",
        "arguments": {
            "CLOUDANT-PLATFORM-MIB::cloudantTrapMessage": "message"
        },
        "name": "{hostname} Server DOWN Event",
        "output": "{message}",
        "handlers": ["debug"],
        "severity": 1
    }
}
